//	    
//	    Query q = em.createNativeQuery(sql);
//	    
//	    return q.getResultList();
//	}

	@PostMapping("/toys")
	public Toy createToy(@Valid @RequestBody Toy toy) {
		return toyRpository.save(toy);
	}

	@PutMapping("/toys/{id}")
	public ResponseEntity<Toy> updateToy(@PathVariable(value = "id") Long toyId,
			@Valid @RequestBody Toy toyDetails) throws ResourceNotFoundException {
		Toy toy = toyRpository.findById(toyId)
				.orElseThrow(() -> new ResourceNotFoundException("Toy not found for this id :: " + toyId));

		category.setName(toyDetails.getName());
		final Category updatedCategory = toyRpository.save(category);
		return ResponseEntity.ok(updatedCategory);
	}

	@DeleteMapping("/categories/{id}")
	public Map<String, Boolean> deleteCategory(@PathVariable(value = "id") Long categoryId)
			throws ResourceNotFoundException {
		Category category = toyRpository.findById(categoryId)
				.orElseThrow(() -> new ResourceNotFoundException("Category not found for this id :: " + categoryId));

		toyRpository.delete(category);
		Map<String, Boolean> response = new HashMap<>();
		response.put("deleted", Boolean.TRUE);
		return response;
	}
}


